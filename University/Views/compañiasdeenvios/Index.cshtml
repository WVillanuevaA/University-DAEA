@model IEnumerable<University.Models.compañiasdeenvios>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre de la Compañía</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.nombreCompañia)</td>
                <td>@Html.DisplayFor(modelItem => item.telefono)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idCompañiaEnvios }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.idCompañiaEnvios }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idCompañiaEnvios }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
